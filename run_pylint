#!/bin/sh
cd /gwms_test/glideinwms
if [ "$1" == "" ]; then
    branch="master"
else
    branch=$1
fi
git clean -f -d
git checkout master
git pull
git checkout $branch
cd /gwms_test
source $VIRTUAL_ENV/bin/activate
no_slash=$(echo $branch| sed -e 's/\//_/g')
mkdir -p $no_slash
./glideinwms/build/jenkins/run_pylint.sh 2>&1 | tee $no_slash/pylint.log
mv *.log $no_slash
